<!-- HERO -->
<section id="hero" class="module-hero module-video module-full-height bg-light-30" data-background="/assets/starting_image.png">



  <!-- YOUTUBE VIDEO-->
  <div class="video-player" data-property="{videoURL:'https://youtu.be/QCHpEucTWgo?t=23s', containment:'.module-video', quality:'large', startAt:23, stopAt: 132, autoPlay:true, loop:true, opacity:1, showControls:false, showYTLogo:false, vol:0, mute:true}"></div>
  <!-- /YOUTUBE VIDEO-->
  <div class="container center-div">
    <div class="row">
      <div class="search-box col-sm-6 col-sm-offset-3">


          <% if logged_in? %>
            <%= form_for(:items, :url => {:controller => 'items', :action => 'create'}, html: {:method => 'POST'}) do |f| %>
            <%= f.label :image, "What are you looking for today?" %>
            <%= f.file_field :image, class: 'btn btn-default' %>
            <%= f.submit :Upload, class:"btn btn-default" %>
            <% end %>
          <% else %>
            <p class="module-title">Please register or log in to search for your next must-have.</p>
          <% end %>

      </div>
    </div>
  </div>

</section>
<!-- /HERO -->

