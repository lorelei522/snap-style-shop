<% if logged_in? %>
  <%=  form_for(:products, :url => {:controller => 'products', :action => 'index'}, html: {:method => 'GET'}) do |f| %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.submit :Upload, class:"btn btn-d btn-round" %>
  <% end %>
<% else %>
  <h1>Please log in to search for your next must-have!</h1>
<% end %>
