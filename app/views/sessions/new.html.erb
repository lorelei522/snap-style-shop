<!-- refactor br tags into appropriate CSS -->
<% if @errors %>
    <div id="error_explanation">
      <p>
        <strong><%= pluralize(@errors.count, "error") %> prohibited you from logging in:</strong>
      </p>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="container center-div">
  <h1>Log in</h1>

      <%= form_tag(:action =>'create', class: 'form-control') do  %>
        <p>Email: <%= text_field_tag :email %></br></p>
        <p>Password: <%= password_field_tag :password %></br></p>
        <br></br>
        <%= submit_tag "Log in", class: "btn btn-default" %>
      <% end %>

</div>
