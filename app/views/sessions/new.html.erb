<h1>Log in</h1>

<% if @errors %>
    <div id="error_explanation">
      <p>
        <strong><%= pluralize(@errors.count, "error") %> prohibited you from logging in:</strong>
      </p>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(:action =>'create') do  %>
      <p>Email </br>
      <%= text_field_tag :email %></p>
        <p>Password </br>
      <%= password_field_tag :password %></p>

      <%= submit_tag "Log in" %>
    <% end %>


  </div>
</div>
