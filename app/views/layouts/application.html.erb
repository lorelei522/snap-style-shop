<!DOCTYPE html>
<html>
  <head>
    <title>Snap+Style+Shop</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Sree+Krushnadevaraya" rel="stylesheet">
    <!-- Favicons -->
  	<link rel="shortcut icon" href="/assets/favicon.png">
  	<link rel="apple-touch-icon" href="/assets/apple-touch-icon.png">
  	<link rel="apple-touch-icon" sizes="72x72" href="/assets/apple-touch-icon-72x72.png">
  	<link rel="apple-touch-icon" sizes="114x114" href="/assets/apple-touch-icon-114x114.png">

  	<!-- Bootstrap core CSS -->
  	<link href="/assets/bootstrap.min.css" rel="stylesheet">

  	<!-- Plugins -->
  	<link href="/assets/font-awesome.css" rel="stylesheet">
  	<link href="/assets/ionicons.css" rel="stylesheet">
  	<link href="/assets/simpletextrotator.css" rel="stylesheet">
  	<link href="/assets/magnific-popup.css" rel="stylesheet">
  	<link href="/assets/owl.carousel.css" rel="stylesheet">
  	<link href="/assets/superslides.css" rel="stylesheet">
  	<link href="/assets/vertical.css" rel="stylesheet">
  	<link href="/assets/animate.css" rel="stylesheet">

  	<!-- Template core CSS -->
  	<link href="/assets/style.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>


  </head>
  <body>
    <!-- PRELOADER -->
    <div class="page-loader">
      <div class="loader">Loading...</div>
    </div>
    <!-- /PRELOADER -->
    <!-- OVERLAY MENU -->
  	<div id="overlay-menu" class="overlay-menu">

  		<a href="#" id="overlay-menu-hide" class="navigation-hide"><i class="ion-close-round"></i></a>

  		<div class="overlay-menu-inner">
  			<nav class="overlay-menu-nav">

  				<ul id="nav">
            <% if logged_in? %>
              <li><%= link_to "HomePage", root_url  %></li>
    					<li><%= link_to "Your Profile", user_path(current_user) %></li>
              <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "HomePage", root_url  %></li>
              <li><%= link_to "Create an Account", new_user_path  %></li>
              <li><%= link_to "Log In", new_session_path  %></li>
            <% end %>
              <li class="slidedown">
                <a href="#">Squad Goals</a>
                <ul>
                  <li><a href="https://github.com/lorelei522/">Lorelei Lopez</a></li>
                  <li><a href="https://github.com/melaniegershman/">Melanie Gershman</a></li>
                  <li><a href="https://github.com/sheriannebolling/">Sherianne Bolling</a></li>
                  <li><a href="https://github.com/sofiaclara93/">Sofia Cepeda</a></li>
                </ul>
              </li>
  				</ul>

  			</nav>
  		</div>

  		<div class="overlay-navigation-footer">

  			<div class="container">

  				<div class="row">

  					<div class="col-sm-12 text-center">
  						<h6 class="copyright font-alt m-b-0">© 2016, Snap+Style+Shop</h6>
  					</div>

  				</div>

  			</div>

  		</div>

  	</div>
  	<!-- /OVERLAY MENU -->
    <!-- WRAPPER -->
    <div class="wrapper">
      <!-- NAVIGATION -->
  		<nav class="navbar navbar-custom navbar-transparent navbar-light navbar-fixed-top">

  			<div class="container">

  				<div class="navbar-header">
  					<!-- YOU LOGO HERE -->
  					<a class="navbar-brand" href="/">
  						<!-- IMAGE OR SIMPLE TEXT -->
              <p class="logo">Snap+Style+Shop</p>
  					</a>
  				</div>

  				<!-- ICONS NAVBAR -->
  				<ul id="icons-navbar" class="nav navbar-nav navbar-right">
  					<li>
  						<a href="#" id="toggle-menu" class="show-overlay" title="Menu">
  							<span class="icon-bar"></span>
  							<span class="icon-bar"></span>
  							<span class="icon-bar"></span>
  						</a>
  					</li>
  				</ul>
  				<!-- /ICONS NAVBAR -->

  				<ul class="extra-navbar nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to "Hi #{current_user.username}", user_path(current_user) %></li>
            <% end %>
  				</ul>

  			</div>

  		</nav>
  		<!-- /NAVIGATION -->

      <%= yield %>

      <!-- FOOTER -->
		<footer class="module bg-light">

			<div class="container">

				<div class="row">

					<div class="col-sm-12">

						<ul class="social-text-links font-alt text-center m-b-20">
							<li><a href="https://github.com/lorelei522/snap-style-shop"><i class="ion-social-github-outline"></i></a></li>
						</ul>

					</div>

				</div>

				<div class="row">

					<div class="col-sm-12">

						<p class="copyright text-center m-b-0">© 2016 <a href="/">Snap+Style+Shop</a>, All Rights Reserved.</p>

					</div>

				</div>

			</div>

		</footer>
		<!-- /FOOTER -->
    </div>
    <!-- /WRAPPER -->
    <!-- SCROLLTOP -->
    <div class="scroll-up">
      <a href="#totop"><i class="fa fa-angle-double-up"></i></a>
    </div>


      <!-- Javascript files -->
      <%= javascript_include_tag 'application' %>

      <script src="/assets/bootstrap.min.js"></script>
      <script src="/assets/jquery.superslides.min.js"></script>
      <script src="/assets/jquery.mb.YTPlayer.min.js"></script>
      <script src="/assets/jquery.magnific-popup.min.js"></script>
      <script src="/assets/owl.carousel.min.js"></script>
      <script src="/assets/jquery.simple-text-rotator.min.js"></script>
      <script src="/assets/imagesloaded.pkgd.js"></script>
      <script src="/assets/isotope.pkgd.min.js"></script>
      <script src="/assets/packery-mode.pkgd.min.js"></script>
      <script src="/assets/appear.js"></script>
      <script src="/assets/jquery.easing.1.3.js"></script>
      <script src="/assets/wow.min.js"></script>
      <script src="/assets/jqBootstrapValidation.js"></script>
      <script src="/assets/jquery.fitvids.js"></script>
      <script src="/assets/jquery.parallax-1.1.3.js"></script>
      <script src="/assets/smoothscroll.js"></script>

      <script src="/assets/contact.js"></script>
      <script src="/assets/custom.js"></script>
    </body>
</html>
