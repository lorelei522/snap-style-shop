<div class="new-user container">
  <h1>Sign up</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, html: { multipart: true}) do |f| %>
    <p> Username:</br> <%= f.text_field :username, class: 'form-control', placeholder: 'Username'%> </p>
    <p> Email:</br> <%= f.email_field :email, class: 'form-control', placeholder: 'Email'%> </p>
    <p> Tell us about yourself:</br> <%= f.text_area :about_me, class: 'form-control', placeholder: 'Short bio'%> </p>
    <p> Password:</br> <%= f.password_field :password, class: 'form-control', placeholder: 'Password'%> </p>
     <%=f.label :image, 'Your profile pic' %><br>
     <%=f.file_field :image %>
    <%= f.submit :Signup, class: "btn btn-default"%>
  <% end %>

  <%if @user.errors.any? %>
    <ul class="Signup_Errors">
      <% for message_error in @user.errors.full_messages %>
        <li> * <%=  message_error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
