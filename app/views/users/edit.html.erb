<div class="container">

  <p>Update profile</p>
    <%= form_for @user, html: {multipart: true} do |f| %>
      <%=f.label :image %><br>
      <%=f.file_field :image %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :aboutme %>
      <%= f.text_area :aboutme %>

      <%= f.submit :Update %>
    <% end %>

</div>
