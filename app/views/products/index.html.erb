<div class="product">
  <% if @products.length > 0 %>
    <section id="search-results">
      <% @products.each do |p| %>
        <ul>
          <li>
            <div class="product-image"><a href="<%=p[:link]%>"><img src="<%=p[:image]%>" alt="Clothing Item"/></a></div>
          </li>
          <li>
          <div> <%= p[:name] %> </div
          </li>
          <li>
            <div class="product-price"><%= p[:price] %></div>
          </li>
        </ul>
      <% end %>
    </section>
  <% end %>
</div>
